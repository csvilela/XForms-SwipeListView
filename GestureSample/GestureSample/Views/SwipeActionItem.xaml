<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestureSample.Views.SwipeActionItem">
    <ContentView.Content>
        <Grid x:Name="MainGrid" RowSpacing="0" ColumnSpacing="0">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped" />
            </Grid.GestureRecognizers>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.25*"/>
                <RowDefinition Height="0.35*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Row="1" Grid.Column="2" x:Name="Icon" />
            <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" HorizontalOptions="Center" HorizontalTextAlignment="Center" LineBreakMode="WordWrap" FontSize="Small" x:Name="TextLabel" />
        </Grid>
    </ContentView.Content>
</ContentView>
